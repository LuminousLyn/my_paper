# Weaver Configuration
# Copy this file to .env and fill in your values


# LLM API Keys - Choose ONE provider and set its API key
# LiteLLM will automatically detect and use the correct environment variable

# OpenAI (most popular choice)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini (uncomment to use)
# GEMINI_API_KEY=your-gemini-api-key-here  

# Anthropic Claude (uncomment to use)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI (uncomment to use)
# AZURE_API_KEY=your-azure-api-key-here
# AZURE_API_BASE=https://your-resource.openai.azure.com/
# AZURE_API_VERSION=2023-12-01-preview

# LLM Model (LiteLLM format: provider/model)
LLM_MODEL=openai/gpt-4o-mini

# Model examples for different providers:
# LLM_MODEL=openai/gpt-4o                          # OpenAI GPT-4
# LLM_MODEL=anthropic/claude-3-sonnet-20240229     # Anthropic Claude
# LLM_MODEL=gemini/gemini-2.0-flash-exp            # Google Gemini
# LLM_MODEL=azure/your-deployment-name             # Azure (use your deployment name)

# LLM Parameters
LLM_TEMPERATURE=0.01
LLM_MAX_TOKENS=2048

# Weaver Settings
WEAVER_LOG_LEVEL=INFO
WEAVER_DATASETS_DIR=./datasets/WikiTableQuestions
WEAVER_PROMPTS_DIR=./prompts
WEAVER_RESULTS_DIR=./results

# Database Configuration
# Choose ONE database type: duckdb, mysql, postgres, sqlite
# WEAVER_DB_TYPE=duckdb
# WEAVER_DB_PATH=./weaver_data.duckdb  # For DuckDB/SQLite

# MySQL Configuration (uncomment to use MySQL)
WEAVER_DB_TYPE=mysql
WEAVER_DB_HOST=localhost
WEAVER_DB_PORT=3306
WEAVER_DB_NAME=text2sql
WEAVER_DB_USER=root
WEAVER_DB_PASSWORD=*****

# PostgreSQL Configuration (uncomment to use PostgreSQL)
# WEAVER_DB_TYPE=postgres
# WEAVER_DB_URL=postgresql://user:password@localhost:5432/weaver


DEBUG=false
